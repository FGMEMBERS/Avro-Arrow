<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>oil.ac</path>
  
  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    
    <object-name>vitre</object-name>
  </animation>
  
  <effect>
    <inherits-from>Aircraft/Avro-Arrow/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>    
  
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine[1]/oil-pressure-psi</property>
    <interpolation>
      <entry><ind>   0 </ind><dep> -210 </dep></entry>
      <entry><ind>  50 </ind><dep>  -90 </dep></entry>
      <entry><ind> 100 </ind><dep>   30 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
