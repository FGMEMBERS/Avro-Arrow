<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>flight-indicator.ac</path>
  
  <animation>
    <object-name>mount</object-name>
    
    <object-name>slat-down</object-name>
    <object-name>stab-full</object-name>
    <object-name>flap-LD</object-name>
    <object-name>brake-up</object-name>
    <object-name>LW-down</object-name>
    <object-name>NW-down</object-name>
    <object-name>RW-down</object-name>
    <object-name>slat-up</object-name>
    <object-name>stab-restricted</object-name>
    <object-name>flap-TO</object-name>
    <object-name>brake-in</object-name>
    <object-name>LW-up</object-name>
    <object-name>NW-up</object-name>
    <object-name>RW-up</object-name>
    <object-name>flap-up</object-name>
    <object-name>slat-barberpole</object-name>
    <object-name>stab-barberpole</object-name>
    <object-name>flap-barberpole</object-name>
    <object-name>brake-barberpole</object-name>
    <object-name>LW-barberpole</object-name>
    <object-name>NW-barberpole</object-name>
    <object-name>RW-barberpole</object-name>
  </animation>
  
  <animation> 
    <object-name>mount</object-name>
    <type>material</type>
    <emission> 
      <factor-prop>controls/lighting/panel-norm</factor-prop>
      <red>   0.45 </red>
      <green> 0.34 </green>
      <blue>  0.18 </blue>
    </emission>
  </animation>
  
  <animation> 
    <type>material</type>
    <object-name>slat-down</object-name>
    <object-name>stab-full</object-name>
    <object-name>flap-LD</object-name>
    <object-name>brake-up</object-name>
    <object-name>LW-down</object-name>
    <object-name>NW-down</object-name>
    <object-name>RW-down</object-name>
    <object-name>slat-up</object-name>
    <object-name>stab-restricted</object-name>
    <object-name>flap-TO</object-name>
    <object-name>brake-in</object-name>
    <object-name>LW-up</object-name>
    <object-name>NW-up</object-name>
    <object-name>RW-up</object-name>
    <object-name>flap-up</object-name>
    <object-name>slat-barberpole</object-name>
    <object-name>stab-barberpole</object-name>
    <object-name>flap-barberpole</object-name>
    <object-name>brake-barberpole</object-name>
    <object-name>LW-barberpole</object-name>
    <object-name>NW-barberpole</object-name>
    <object-name>RW-barberpole</object-name>
    <emission> 
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.75 </red>
      <green> 0.55 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>flap-up</object-name>
    <condition>
      <equals>
        <property>surface-positions/spoiler-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>flap-TO</object-name>
    <condition>
      <equals>
        <property>surface-positions/spoiler-pos-norm</property>
        <value>0.75</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>flap-LD</object-name>
    <condition>
      <equals>
        <property>surface-positions/spoiler-pos-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>slat-up</object-name>
    <condition>
      <equals>
        <property>surface-positions/flap-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>slat-down</object-name>
    <condition>
      <greater-than-equals>
        <property>surface-positions/flap-pos-norm</property>
        <value>0.75</value>
      </greater-than-equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>brake-in</object-name>
    <condition>
      <equals>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>brake-up</object-name>
    <condition>
      <equals>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>NW-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>NW-down</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>LW-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>LW-down</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>RW-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation> 
    <type>select</type>
    <object-name>RW-down</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
</PropertyList>
