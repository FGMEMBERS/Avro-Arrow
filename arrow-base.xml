<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel, StuartC, N-SCOT ( Liveries )</author>
    <aircraft-version>0.7</aircraft-version>
    <status>0.7 Alpha</status>
   
    <fuel-fraction>1</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Avro-Arrow/arrow-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/Avro-Arrow/Sounds/arrow-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Avro-Arrow/Models/CF105-Arrow.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
	
	 <systems>
    <electrical>
      <path>Aircraft/Generic/generic-electrical.xml</path>
    </electrical>
    <autopilot>
      <path>Aircraft/Avro-Arrow/Systems/autopilot5.xml</path>
    </autopilot>
    <refuel>
      <type>boom</type>
      <serviceable type="bool">true</serviceable>
    </refuel>  
  </systems> 


    <help>
      <title>Avro arrow</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
	  <key>
        <name>}</name>
        <desc>Start/Stop engines.</desc>
      </key>
    </help>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <int n="10" alias="/controls/electric/key-pos">  0 </int>             <!-- 10 key position -->
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>  
      </generic>
    </multiplay>

    <!-- Flap settings -->
    <flaps>
      <setting>0.00</setting>
      <setting>0.08</setting>
      <setting>0.16</setting>
      <setting>0.32</setting>
      <setting>0.48</setting>
      <setting>0.64</setting>
      <setting>0.82</setting>
      <setting>1.00</setting>
    </flaps>

    <weight n="0">
      <name>Crew</name>
      <weight-lb>180</weight-lb> 
      <max-lb>400</max-lb>
      <min-lb>180</min-lb>
    </weight>

    <help>
      <title>Avro Arrow</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <replay>
      <disable>1</disable>
    </replay>

    <menubar include="Dialogs/arrow-menu.xml"/>

  </sim>

  
  <instrumentation>
    <rwr>
      <display-lighting-intens type="double">0.4</display-lighting-intens>
      <symbology-lighting-intens type="double">1</symbology-lighting-intens>
    </rwr>
    <enav><selected type="int">3</selected></enav>
    <radar>
      <range type="int" archive="y">40</range>
      <range-factor type="double" archive="n">0.001888</range-factor>
      <minimized type="bool" archive="y">false</minimized>
      <selected type="int">3</selected>
      <!-- inicio en pruebas -->
      <enabled type="bool">true</enabled>
      <az-field type="double">120</az-field>
      <range type="double">150</range>
      <range-selected type="double">50</range-selected>
      <radar2-range type="double">150</radar2-range>
      <display-rdr type="bool">true</display-rdr>
      <radar-standby type="int">3</radar-standby>
      <mode>
        <rws type="bool">true</rws>
        <tws-auto type="bool">false</tws-auto>
      </mode>
    </radar> 
    <terrain-radar>
      <hi-elev>
        <alt-ft type="double">-9999.9</alt-ft>
        <lat-deg type="double">-9999.9</lat-deg>
        <lon-deg type="double">-9999.9</lon-deg>
        <dist-m type="double">-9999.9</dist-m>
        <collision-status type="string">initialised</collision-status>
      </hi-elev>
      <settings>
        <mode type="string">extend</mode>
        <state type="string">off</state>
        <range-m type="double">2500</range-m>
        <step-m type="double">250</step-m>
        <max-climb-rate-fps type="double">120</max-climb-rate-fps>
        <hi-elev-markers type="bool">false</hi-elev-markers>
      </settings>
    </terrain-radar>
  </instrumentation>
  
  <systems>
    <electrical>
      <path>Aircraft/Generic/generic-electrical.xml</path>
    </electrical>
    <autopilot>
      <path>Aircraft/Avro-Arrow/Systems/autopilot5.xml</path>
    </autopilot>
    <refuel>
      <type>boom</type>
      <serviceable type="bool">true</serviceable>
    </refuel>  
  </systems> 

  <environment>
    <turbulence>
      <use-cloud-turbulence>true</use-cloud-turbulence>
    </turbulence>
  </environment>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
	 <engine n="1">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2000</level-gal_us>
      </tank>
	    <tank n="1">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">3000</level-gal_us>
      </tank>
	    <tank n="2">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">3000</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <controls>
    <gear>
      <brake-parking type="double">1.0</brake-parking>
    </gear>
  </controls>
  
  <input>
    <keyboard include="Nasal/arrow-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Avro-Arrow/Nasal/doors.nas</file>
    </doors>
    <arrow>
      <file>Aircraft/Avro-Arrow/Nasal/light.nas</file>
      <file>Aircraft/Avro-Arrow/Nasal/liveries.nas</file>
    </arrow>
	  <aar> 
      <file>Aircraft/Generic/aar.nas</file>
    </aar>
    <radardist>
      <file>Aircraft/Instruments-3d/radardist/radardist.nas</file>
    </radardist>
    <rwr>
      <file>Aircraft/Avro-Arrow/Nasal/rwr.nas</file>
    </rwr>
    <radar>
      <file>Aircraft/Avro-Arrow/Nasal/radar.nas</file> 
    </radar>
	  <low>
      <file>Aircraft/Avro-Arrow/Nasal/low.nas</file>
    </low>
	
	<engines>
   <file>Aircraft/Avro-Arrow/Nasal/generic-yasim-engine.nas</file>
  </engines>
  
  <emu>
   <file>Aircraft/Avro-Arrow/Nasal/emu.nas</file>
  </emu>
  </nasal>

</PropertyList>

